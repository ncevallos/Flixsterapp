<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <TextView
        android:id="@+id/dtvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:text="It Chapter Two" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="10"
        android:rating="8.5" />

    <TextView
        android:id="@+id/dtvOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="A spinoff of The Fate of the Furious, focusing on Johnson's US Diplomatic security Agent Luke Hobbs forming an unlikely alliance with Statham's Deckard Shaw." />

    <TextView
        android:id="@+id/dtvRelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Release Date: "
        android:textSize="20sp" />
</LinearLayout>